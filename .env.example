# Voice-to-Invoice Configuration

# Server Settings
PORT=8000
HOST=0.0.0.0

# CORS Settings
# For production, set to your actual domain (e.g., https://yourdomain.com)
# For local development, use http://localhost:3000 or http://127.0.0.1:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here

# Security Settings
# Secret key for session management (generate a strong random string)
SECRET_KEY=your-secret-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=100

# File Upload Settings
MAX_FILE_SIZE_MB=10
MAX_AUDIO_DURATION_SECONDS=300

# Database Settings (for future SQLite implementation)
DATABASE_URL=sqlite:///./voice_invoice.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=voice_invoice.log